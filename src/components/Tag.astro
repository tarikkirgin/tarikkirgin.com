---
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div
  class="inline-block text-xs bg-neutral-100 dark:bg-neutral-800 text-neutral-500 dark:text-neutral-400 px-2 py-1 rounded-md ring-1 ring-neutral-300 dark:ring-neutral-700"
>
  <div class="flex flex-row gap-1">
    <Icon name="mdi:tag-outline" class="w-4 h-4" />
    {title}
  </div>
</div>
