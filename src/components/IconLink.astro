---
import { Icon } from "astro-icon/components";

interface Props {
  icon: string;
  href: string;
  name: string;
}

const { icon, href, name } = Astro.props;
---

<a
  class="group link inline-flex gap-1 pb-0.5 px-0.5 justify-center items-center text-lg"
  href={href}
  target="_blank"
>
  <Icon
    class="h-6 w-full text-gray-600 group-hover:text-black group-focus:text-black transition duration-300 ease-in-out"
    name={icon}
  />
  {name}</a
>
