---
import { Icon } from "astro-icon/components";

interface Props {
  icon: string;
  href: string;
  name: string;
}

const { icon, href, name } = Astro.props;
---

<a
  class="group link inline-flex gap-1 pb-0.5 pr-0.5 justify-center items-center text-lg"
  href={href}
  target="_blank"
>
  <Icon
    class="h-6 w-6 text-neutral-600 dark:text-neutral-300 group-hocus:text-foreground group-hocus:transition-all group-hocus:duration-300"
    name={icon}
    aria-hidden="true"
  />
  {name}</a
>
